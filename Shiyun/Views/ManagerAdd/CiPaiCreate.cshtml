@model Models.CiPai

@{
    ViewBag.Title = "CiPaiCreate";
    Layout = "~/Views/Shared/HouTai.cshtml";
}

<script type="text/javascript">
    var editorOption = {
        initialFrameWidth: 784,
        initialFrameHeight: 400
    };
    var editor = new baidu.editor.ui.Editor(editorOption);
    editor.render('CiPaiJieshao');
</script>

@using (Html.BeginForm("CiPaiCreate", "ManagerAdd", FormMethod.Post, new { id = "CreateForm", enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="title_top">
            <p>词牌名添加</p>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <p class="text-left">请输入词牌名</p>
        <p>
            @Html.EditorFor(model => model.CiPaiName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CiPaiName, "", new { @class = "text-danger" })
        </p>
        <p class="text-left">请选择上传的图片</p>
        <p>

            <input type="file" name="CiPaiImage" value="CiPaiImage" />

        </p>
        <p class="text-left">请输入详情</p>
        <p>

            @Html.TextAreaFor(model => model.CiPaiJieshao)
        </p>


        <p class="text-center">
           
            <input type="submit" value="添加" class="btn btn-default" style="width:60px;margin-right:1200px;" />
        </p>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "CiPaiIndex")
</div>
