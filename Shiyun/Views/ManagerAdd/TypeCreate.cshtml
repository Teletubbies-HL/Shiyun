@model Models.ShiType

@{
    ViewBag.Title = "TypeCreate";
    Layout = "~/Views/Shared/HouTai.cshtml";
}

<script type="text/javascript">
    var editorOption = {
        initialFrameWidth: 784,
        initialFrameHeight: 200
    };
    var editor = new baidu.editor.ui.Editor(editorOption);
    editor.render('ShiTypeJieshao');
</script>

@using (Html.BeginForm("TypeCreate", "ManagerAdd", FormMethod.Post, new { id = "CreateForm", enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="title_top">
            <p>类型添加</p>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <p class="text-left">请输入类型名</p>
        <p>
            @Html.EditorFor(model => model.ShiTypeName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ShiTypeName, "", new { @class = "text-danger" })
        </p>
        <p class="text-left">请选择上传的图片</p>
        <p>

            <input type="file" name="ShiTypeImage" value="ShiTypeImage" />

        </p>
        <p class="text-left">请输入详情</p>
        <p>

            @Html.TextAreaFor(model => model.ShiTypeJieshao)
        </p>


        <p class="text-center">
            <input type="submit" value="添加" class="btn btn-default" style="width:60px;margin-right:1200px;" />
        </p>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "TypeIndex")
</div>
