@model Models.ShiType

@{
    ViewBag.Title = "TypeCreate";
}

<style type="text/css">
    .content {
        margin-bottom: 40px;
        margin-top: 20px;
        margin-left: 50px;
    }

    .title_top {
        margin-top: 20px;
        background-color: #dd3b64;
        padding: 5px;
        border-radius: 2px;
        background-position: -88px 0pt;
        color: #FFFFFF;
        width: 100%;
    }

    .div {
        margin-top: 30px;
    }

    .aaa {
        width: 100%;
        height: 200px;
    }
</style>
<link href="~/Manager/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/Manager/js/jquery/jquery.min.js"></script>
<script src="~/Manager/js/bootstrap/js/bootstrap.min.js"></script>
<script src="~/ueditor/ueditor.config.js"></script>
<script src="~/ueditor/ueditor.all.js"></script>
<script type="text/javascript">
    var editorOption = {
        initialFrameWidth: 784,
        initialFrameHeight: 400
    };
    var editor = new baidu.editor.ui.Editor(editorOption);
    editor.render('ShiTypeJieshao');
</script>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="title_top">
            <p>类型添加</p>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <p class="text-left">请输入类型名</p>
        <p>
            @Html.EditorFor(model => model.ShiTypeName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ShiTypeName, "", new { @class = "text-danger" })
        </p>

        <p class="text-left">请输入详情</p>
        <p>

            @Html.TextAreaFor(model => model.ShiTypeJieshao)
        </p>


        <p class="text-center">
            <input type="submit" value="添加" class="btn btn-default" style="width:60px;margin-right:1200px;" />
        </p>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "TypeIndex")
</div>
