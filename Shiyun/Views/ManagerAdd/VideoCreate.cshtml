@model Models.Video
@{
    ViewBag.Title = "VideoCreate";
    Layout = "~/Views/Shared/HouTai.cshtml";
}
@using (Html.BeginForm("VideoCreate", "ManagerAdd", FormMethod.Post, new { id = "CreateForm", enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="title_top">
            <p style="color:darkgrey">
                @Html.ActionLink("词集列表", "CiIndex")
            </p>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <p class="text-left">请输入视频名</p>
        <p>
            @Html.EditorFor(model => model.VideoName, new { htmlAttributes = new { @class = "form-control", style = "width:50%;" } })
            @Html.ValidationMessageFor(model => model.VideoName, "", new { @class = "text-danger" })
        </p>
        <p class="text-left">请选择视频类别</p>
        <p><table>
                <tr>
                    <td>类别</td>
                    <td> &nbsp;</td>
                    <td>集数</td>                   
                </tr>
                <tr>
                    <td style="width:30%;">
                       @Html.DropDownList("VideoK_id", null, htmlAttributes: new { @class = "form-control" })
                       @Html.ValidationMessageFor(model => model.VideoK_id, "", new { @class = "text-danger" })
                    </td>                  
                    <td>&nbsp;</td>
                    <td style="width:30%;">
                      @Html.EditorFor(model => model.VideoJishu, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.VideoJishu, "", new { @class = "text-danger" })
                    </td>
                </tr>
            </table>
        </p>
        <p class="text-left">
            <table>
                <tr>
                    <td style="width:40%;">
                        请选择上传封面
                    </td>
                    <td style="width:40%;">
                        请选择上传视频
                    </td>
                </tr>
                <tr>
                    <td style="width:40%;">
                        <input type="file" name="Cover" value="Cover" />
                    </td>
                    <td style="width:40%;">
                        <input type="file" name="VideoURL" value="VideoURL" />
                    </td>
                </tr>
            </table> </p>
        <p class="text-center">
            <input type="submit" value="添加" class="btn btn-default" style="width:60px;margin-right:1200px;" />
        </p>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "CiIndex")
</div>  
