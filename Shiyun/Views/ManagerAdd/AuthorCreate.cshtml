@model Models.Author

@{
    ViewBag.Title = "AuthorCreate";
}

<style type="text/css">
    .content {
        margin-bottom: 40px;
        margin-top: 20px;
        margin-left: 50px;
    }

    .title_top {
        margin-top: 20px;
        background-color: #dd3b64;
        padding: 5px;
        border-radius: 2px;
        background-position: -88px 0pt;
        color: #FFFFFF;
        width: 100%;
    }

    .div {
        margin-top: 30px;
    }

    .aaa {
        width: 100%;
        height: 200px;
    }
</style>
<link href="~/Manager/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/Manager/js/jquery/jquery.min.js"></script>
<script src="~/Manager/js/bootstrap/js/bootstrap.min.js"></script>
<script src="~/ueditor/ueditor.config.js"></script>
<script src="~/ueditor/ueditor.all.js"></script>
<script type="text/javascript">
    var editorOption = {
        initialFrameWidth: 784,
        initialFrameHeight: 400
    };
    var editor = new baidu.editor.ui.Editor(editorOption);
    editor.render('Jieshao');
</script>

@using (Html.BeginForm("AuthorCreate", "ManagerAdd", FormMethod.Post, new { id = "CreateForm", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="title_top">
            <p>作者添加</p>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <p class="text-left">请输入作者名</p>
        <p>
            @Html.EditorFor(model => model.AuthorName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AuthorName, "", new { @class = "text-danger" })
        </p>
        <p class="text-left">请选择年代</p>
        <p style="width:30%;">
            @Html.DropDownList("Time_id", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Time_id, "", new { @class = "text-danger" })
        </p>
        <p class="text-left">请选择上传的图片</p>
        <p>

            <input type="file" name="AuthorImage" value="AuthorImage" />

        </p>

        <p class="text-left">请输入详情</p>
        <p>

            @Html.TextAreaFor(model => model.Jieshao)
        </p>

        <p class="text-center">
            <input type="submit" value="添加" class="btn btn-default" style="width:60px;margin-right:1200px;" />
        </p>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "AuthorIndex")
</div>
