    $(function () {
        $(".play1").click(function() {
            $(".pause1").show(); $(".play1").hide(); $(".music1").trigger('play'); $(".pause2").hide(); $(".play2").show(); $(".music2").trigger('pause'); $(".pause3").hide(); $(".play3").show(); $(".music3").trigger('pause');
        });
        $(".pause1").click(function() {
            $(".pause1").hide(); $(".play1").show(); $(".music1").trigger('pause');
        });
        $(".play2").click(function () { $(".pause2").show(); $(".play2").hide(); $(".play2").next().next().trigger('play'); $(".pause1").hide(); $(".play1").show(); $(".music1").trigger('pause'); $(".pause3").hide(); $(".play3").show();  $(".music3").trigger('pause'); });
        $(".pause2").click(function () {$(".pause2").hide(); $(".play2").show(); $(".play2").next().next().trigger('pause');});
        $(".play3").click(function () { $(".pause3").show(); $(".play3").hide(); $(".play3").next().next().trigger('play'); $(".pause1").hide(); $(".play1").show(); $(".music1").trigger('pause'); $(".pause2").hide(); $(".play2").show(); $(".music2").trigger('pause'); });
        $(".pause3").click(function () {$(".pause3").hide(); $(".play3").show(); $(".play3").next().next().trigger('pause');});
        $(".imgList a #imgList1,.imgList a #imgList2,.imgList a #imgList3").hover(function () {
            $(".shadow").css("left", "0px");
        }, function() {
            $(".shadow").css("left", "-200px");
        });
        $(".shadow").hover(function () {
            $(this).css("left", "0");
        }, function () {
            $(this).css("left", "-200px");
        });

        $(function () {
            $(".Tribune-choose .cotenter ul").children(":eq(1)").children().attr("href", '@Url.Action("YuanChuang","LunTan",new { luntanId = 1})');
