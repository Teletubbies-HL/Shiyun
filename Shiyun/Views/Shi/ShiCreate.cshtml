@using (Html.BeginForm("ShiCreate", "Shi", FormMethod.Post, new { id = "CreateForm", enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="container">
        <div class="title_top">
            <p>诗集添加</p>
        </div>
      
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <p class="text-left">请输入诗名</p>
        <p>
            @Html.EditorFor(model => model.ShiTitle, new { htmlAttributes = new { @class = "form-control" ,style = "width:50%;" } })
            @Html.ValidationMessageFor(model => model.ShiTitle, "", new { @class = "text-danger" })
        </p>
        <p class="text-left" >请选择诗集类别</p>
        <p>
            <table>
             <tr>
                <td>作者</td>
                 <td> &nbsp;</td>
                <td>年代</td>
                 <td> &nbsp;</td>
                <td>类型</td>
             </tr>
            <tr>
                <td style="width:30%;">
                    @Html.DropDownList("Author_id", null, htmlAttributes: new { @class = "form-control"})
                    @Html.ValidationMessageFor(model => model.Author_id, "", new { @class = "text-danger"})
                </td>
                <td>&nbsp;</td>
                <td style="width:30%;">
                    @Html.DropDownList("Time_id", null, htmlAttributes: new { @class = "form-control"})
                    @Html.ValidationMessageFor(model => model.Time_id, "", new { @class = "text-danger"})
                </td>
                <td>&nbsp;</td>
                <td style="width:30%;">
                    
                    @Html.DropDownList("ShiType_id", null, htmlAttributes: new { @class = "form-control"})
                    @Html.ValidationMessageFor(model => model.ShiType_id, "", new { @class = "text-danger"})
                </td>
               
                @*<td style="width:80%;">

                    <input id="IsNeverExpired" name="IsNeverExpired" type="checkbox" value="true" />
                    @Html.DropDownList("ShiType_id", null, htmlAttributes: new { @class = "form-control"})
                    @Html.ValidationMessageFor(model => model.ShiType_id, "", new { @class = "text-danger" })
                </td>*@
            </tr>
            </table>         
        </p>
        <p class="text-left">
        <table>
            <tr>
                <td style="width:40%;">
                    请选择上传图片
                </td>
                <td style="width:40%;">
                    请选择上传语音
                </td>
            </tr>
            <tr>
                <td style="width:40%;">
                    <input type="file" name="ShiImage" value="ShiImage" />
                </td>
                <td style="width:40%;">
                    <input type="file" name="ShiYuying" value="ShiYuying" />
                </td>
            </tr>
        </table>
        
        
        </p>
      
       
        <p class="text-left">请输入内容</p>
        <p>

            @Html.TextAreaFor(model => model.ShiContent)
        </p>
        <p class="text-left">请输入翻译</p>
        <p>

            @Html.TextAreaFor(model => model.ShiFanyi)
        </p>
        <p class="text-left">请输入赏析</p>
        <p>

            @Html.TextAreaFor(model => model.ShiShangxi)
        </p>
        <p class="text-left">请输入背景</p>
       <p>

            @Html.TextAreaFor(model => model.Shibeijing)
        </p>       

       
       
        <p class="text-center">
            <input type="submit" value="添加" class="btn btn-default" style="width:60px;margin-right:1200px;" />
        </p>
       
    </div>
}

