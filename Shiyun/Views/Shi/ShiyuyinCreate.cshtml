@model Models.Shi

@{
    ViewBag.Title = "ShiyuyinCreate";
}

<style type="text/css">
    .content {
        margin-bottom: 40px;
        margin-top: 20px;
        margin-left: 50px;
    }

    .title_top {
        margin-top: 20px;
        background-color: #dd3b64;
        padding: 5px;
        border-radius: 2px;
        background-position: -88px 0pt;
        color: #FFFFFF;
        width: 100%;
    }

    .div {
        margin-top: 30px;
    }

    .aaa {
        width: 100%;
        height: 200px;
    }
</style>
<link href="~/Manager/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/Manager/js/jquery/jquery.min.js"></script>
<script src="~/Manager/js/bootstrap/js/bootstrap.min.js"></script>
<script src="~/ueditor/ueditor.config.js"></script>
<script src="~/ueditor/ueditor.all.js"></script>

@using (Html.BeginForm("ShiyuyinCreate", "Shi", FormMethod.Post, new { id = "CreateForm", enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="container">
        <div class="title_top">
            <p>语音添加</p>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <p class="text-left">请选择对应诗集</p>
        <p>
            @Html.DropDownList("Shi_id", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Shi_id, "", new { @class = "text-danger" })
        </p>

        <p class="text-left">请选择上传语音</p>
        <p>
           
            <input type="file" name="ShiYuying" value="ShiYuying" />
           
        </p>
        
        <p class="text-center">
            <input type="submit" value="添加" class="btn btn-default" />
        </p>
    </div>
}

<div>
    @Html.ActionLink("返回列表", "Index")
</div>
