                        <li><a href="@Url.Action("Index","Mall")">商城</a></li>
                        <li><a href="@Url.Action("Index","LunTan")">论坛</a></li>
                        <li style="margin-right: 0px;"><a href="javascript:void(0)" class="nav_search"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="smallnav" style="display: none;">
            <div class="container">
                <div class="smallnav_logo">
                    <a><img src="~/Images/Home/shiyunlogo.png" width="40" height="40" /></a>
                </div>
                <button type="button" class="open open1">-</button>
