@model PagedList.IPagedList<Models.View_Authorsc>
@using PagedList.Mvc;
@using PagedList
@{
    ViewBag.Title = "GetAuthorAllPoem";
}
@foreach (var ausc in Model)
{
    <div class="col-dt-6 col-6 col-mb-12">
        <div class="collection-item">
            <div class="collection-cover">
                <a href="https://wenxue.ruogoo.cn/collection/379" class="image">
                    <img src="@ausc.ShiImage" data-original="@ausc.CiImage" width="120" height="160" style="display: inline;">
                </a>
            </div>
            <div class="collection-detail">
                <h3 class="big title one-line">
                    <a href="https://wenxue.ruogoo.cn/collection/379"> @ausc.CiImage </a>
                </h3>
                <p class="description">人间凄凉荒谬事，此集尽数入囊中。</p>
                <p>
                    <span class="span-item"><a href="https://user.ruogoo.cn/5240" class="gray"> @ausc.AuthorName</a></span>
                    <span class="span-item gray small text"> @ausc.Time_id </span>
                </p>
            </div>
        </div>
    </div>
}
<div class="row page-list">
    <div class="col-xs-6 col-sm-4 col-md-4 pagejiye" style="width: 100%; ">
        @Html.PagedListPager(Model, page => Url.Action("GetAuthorAllPoem", "ShiShow", new { page, Authorid = @ViewBag.Author_id }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new PagedListRenderOptions { LinkToFirstPageFormat = "首页", LinkToLastPageFormat = "尾页", MaximumPageNumbersToDisplay = 5 }, new AjaxOptions { HttpMethod = "GET", InsertionMode = InsertionMode.Replace, UpdateTargetId = "GetAuthorAllPoem" }))
    </div>
</div>
<div class="col-xs-2 col-sm-2 col-md-2 pageje">
</div>
