@using PagedList.Mvc;
@using PagedList
@model PagedList.IPagedList < Models.View_CiReply>
@{
    Layout = null;
}
@foreach (var apr in Model)
{
    <div class="reply">
        <div class="reuserimage">
            <img id="Image1" src="@apr.UserImage1" style="width: 10%; height: 10%;" />
        </div>
        <div class="repostname">@apr.UserName1</div>
        <div class="reposttime">@apr.ReplyTime1</div>
        @{if (@apr.ReReply_id1 != null)
            {
                <div class="rereplycontent">
                    <span style="display: block; margin-left: 10px; color: rgb(153, 153, 153);">@apr.UserName2</span>
                    <span style="display: block; margin-left: 10px; color: rgb(81, 81, 81);">@Html.Raw(apr.ReplyContent2)</span>
                </div>
            }
        }
        <div class="ReplyContent">@Html.Raw(apr.ReplyContent1) </div>
        <input id="btnReply3" class="cssbtnReply" value="回复" readonly="readonly" type="submit" />
        <input type="hidden" class="huifuHidden" id="HiddenField1" value="@apr.Reply_id1" />
        <hr style="border-bottom: 1px solid #E6E6E6; display: block; float: right; margin: 25px 0px 0px; width: 100%;" />
    </div>
            }
<div class="row page-list">
    <div class="col-xs-6 col-sm-4 col-md-4 pagejiye" style="width: 100%; ">
      @Html.PagedListPager(Model, page => Url.Action("GetAllPostReply", "ShiShow", new { page, id = @ViewBag.Ci_id }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new PagedListRenderOptions { LinkToFirstPageFormat = "首页", LinkToLastPageFormat = "尾页", MaximumPageNumbersToDisplay = 5 }, new AjaxOptions { HttpMethod = "GET", InsertionMode = InsertionMode.Replace, UpdateTargetId = "getAllPostReply" }))
    </div>
</div>
<div class="col-xs-2 col-sm-2 col-md-2 pageje">
</div>