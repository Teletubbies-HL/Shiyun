                        <div class="widget wid-news">
                            <div class="wid-header">
                                <h6 style="border-top: 3px solid #00c3f5;">编辑推荐</h6>
                                <div class="wid-content">
                                    <div class="row">
                                        @foreach (var item in Model.GetRecommend)
