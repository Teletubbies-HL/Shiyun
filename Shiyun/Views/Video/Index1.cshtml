@model Shiyun.Models.VideoViewMode
@{
    ViewBag.Title = "诗韵-纪录片";
}
@section style{

    <link href="~/Content/css/Video/css/zerogrid.css" rel="stylesheet" />
    <link href="~/Content/css/Video/css/style.css" rel="stylesheet" />
