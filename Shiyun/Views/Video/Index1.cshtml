    </style>
       
}

<div id="wrapper" style="margin-top:15px;">
    <div class="wrap-body">


        <!--////////////////////////////////////Container-->
        <section id="container" class="index-page">
            <div class="wrap-container zerogrid">
                <div class="row">
                    <div id="main-content" class="col-2-3">
                        <section class="all">
                            <div class="header">
                                <h2>全部视频</h2>
                                <div class="row" id="getAllVideoK">
                                    @{Html.RenderAction("GetAllVideoK", "Video");}
