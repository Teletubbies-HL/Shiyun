                        </section>
                    </div>
                    <div id="sidebar" class="col-1-3">
                        <!---- Start Widget ---->
                        <div class="widget wid-post">
                            <div class="wid-header">
                                <h6>最新视频</h6>
                                <div class="wid-content">
                                    @foreach (var item in Model.GetNewVideo)
                                    {
                                        <div class="post wrap-vid">
                                            <div class="zoom-container">
                                                <a href="@Url.Action("VideoDetails","Video",new { VideoK_id = @item.VideoK_id , Video_id = @item.Video_id})">
                                                    <span class="zoom-caption">
                                                        <i class="iconfont icon-play" style="color: white;">&#xe64f;</i>
                                                    </span>
                                                    <img src="@item.Cover" />
                                                </a>
                                            </div>
                                            <div class="wrapper">
                                                <h5 class="vid-name"><a href="@Url.Action("VideoDetails","Video",new { VideoK_id = @item.VideoK_id, Video_id = @item.Video_id})">@item.VideoName</a></h5>
                                                <div class="info">
                                                    <span><i class="iconfont">&#xe63e;</i>@item.AddTime</span>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
