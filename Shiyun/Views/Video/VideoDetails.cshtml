<section onload="load();">
<div class="videobox">
    <div class="videobox1">
        <div class="video">
            <div class="name">
                <div id="ltvTitle">
                    @foreach (var item in Model.Video1)
                    {
                        <lable id="lblName" style="font-size: 20px; color: #C03F3C;">@item.VideoName</lable>
                        <input class="videoK_id" type="hidden" value="@item.VideoK_id"/>
                        <input class="video_id" type="hidden" value="@item.Video_id" />
                        <input class="cover" type="hidden" value="@item.Cover"/>
                        <input class="videoURL" type="hidden" value="@item.VideoURL"/>
                    }
                    
                </div>
            </div>
            <div class="videoplay">
                <div id="a1"> </div>
                <input runat="server" type="hidden" value="0" id="a1video" name="name"/>
                <input runat="server" type="hidden" value="0" id="videocover" name="name"/>               
                <div class="right-hide"><span class="lblRight"><< 展开列表</span></div>
                <div class="right-show" >
                    <div class="btnshow">
                        <span class="btnshowbackground"><img src="~/Images/Video/zhankai.png" style="width: 100%;" /></span>
                        <span class="btnshowfont">>></span>
                    </div>
                    <div class="xuanji">
                        <span class="xuanji-choose"><a href="javascript:void(0)">选集</a> </span>
                        <div class="xuanji-box">
                            <div id="ltvVideo">
                                @foreach (var item in Model.Video2)
                                {
                                    <a href="@Url.Action("VideoDetails","Video",new { VideoK_id = @item.VideoK_id , Video_id =@item.Video_id})" id="hlkVideoJishu" class="csshlkVideoJishu">
                                        <span class="xuanji-box-1">@item.VideoJishu</span>
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="contenter">
    <div class="jieshao">
        <div id="ltvJieshao">
            @foreach (var item in Model.VideoK1)
            {
                <lable id="lblName3" class="span1" style="font-size: 20px; color: #888888;">@item.VideoKName</lable>
                <lable id="lblTime" class="span1" style="font-size: 15px; color: #888888;">时间:<span style="color: #C03F3C;">@item.AddTime</span></lable>
                <lable id="Label1" class="span1" style="font-size: 15px; color: #888888;">简介: <span style="color: #C03F3C;">@item.VideoDetails</span></lable>
            }
            
        </div>
        <hr style="height: 1px; border: none; border-top: 2px solid #C03F3C; margin-top: 20px;"/>
    </div>
    <div class="zuijinspshowbox">
        <lable id="Label2" class="csslable2" style="font-size: 20px; color: #888888;">最近视频</lable>
        <div id="zuijinsp">
            @foreach (var item in Model.GetNewVideo)
            {

                <a id="hlkzuijinsp" class="csshlkzuijinsp" href="@Url.Action("VideoDetails","Video",new { VideoK_id = @item.VideoK_id , Video_id =@item.Video_id})">
                    <div class="zuijinspshow">
                        <img id="zuijinspImage" class="zuijinspImage" src="@item.Cover" />
                        <span class="zuijinspTime"> @item.AddTime</span>
                        <span class="zuijinspTitle">@item.VideoName</span>
                    </div>
                </a>

            }
        </div>
    </div>
</div>


</section>
